{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "public/dist/**"],
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "TZ",
        "SESSION_PASSWORD",
        "API_BASE_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "ES_NODE",
        "ES_USERNAME",
        "ES_PASSWORD",
        "APP_PORT",
        "APP_ADDRESS",
        "JWT_SECRET",
        "MYSQL_PRIMARY_URL",
        "MYSQL_SECONDARY_URL",
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_USERNAME",
        "SMTP_PASSWORD",
        "SMTP_SENDER",
        "SMTP_BASE_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
