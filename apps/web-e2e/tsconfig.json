{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": [
        "playwright.config.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "playwright-report",
        "build"
    ],
}