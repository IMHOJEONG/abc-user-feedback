{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noEmit": false,
    "allowJs": false,
    "paths": {
      "#/*": ["src/server/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/server",
    "src/types.ts"
  ]
}
